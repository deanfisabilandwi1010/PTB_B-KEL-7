<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailpermintaanTA">

    <ImageView
        android:id="@+id/top"
        android:layout_width="416dp"
        android:layout_height="78dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/kembali"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/nocolor"
        android:src="@drawable/bekbek"
        android:onClick="kembali"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Permintaan TA"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintVertical_bias="0.015" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"


        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.155">

        <TextView
            android:id="@+id/textNama_mahasiswa"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="16sp"
            android:fontFamily="sans-serif-black"
            android:text="Dean Fisabil Andwi"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_NIMmhs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="2011521010"
            android:textColor="#373434"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Judul Tugas Akhir :"
            android:textColor="#373434"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textJudulTA"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="1dp"
            android:fontFamily="serif"
            android:text="SPK Pemilihan Bank Terbaik"
            android:textColor="#373434"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textDospingTA"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="80dp"
            android:fontFamily="serif"
            android:text="Pembimbing : Ricky Akbar,M.Kom"
            android:textColor="#373434"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:fontFamily="serif"
            android:text="Proposal.pdf"
            android:textColor="#1B17E2"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/desk" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ubahDosen"
            android:layout_width="100dp"
            android:layout_height="37dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/buttonshapemain"
            android:fontFamily="sans-serif-black"
            android:onClick="gantiDosen"
            android:text="Ubah"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </GridLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="330dp"
        android:layout_height="52dp"
        android:background="@drawable/buttonblmredy"
        android:fontFamily="sans-serif-black"
        android:onClick="approve"
        android:text="Approve"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.652" />


</androidx.constraintlayout.widget.ConstraintLayout>