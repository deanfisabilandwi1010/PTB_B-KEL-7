<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    app:cardBackgroundColor="#D9DDD9"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"

    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".detailDosen">



        <ImageView
            android:id="@+id/profil_dosen"
            android:layout_width="72dp"
            android:layout_height="66dp"
            android:src="@drawable/logounand"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.453" />

        <TextView
            android:id="@+id/textNamaDosen"
            android:layout_width="299dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Ricky Akbar, M.Kom"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/profil_dosen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.038" />

        <TextView
            android:id="@+id/textNIK"
            android:layout_width="299dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif-black"
            android:text="198410062012121001"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toEndOf="@+id/profil_dosen"
            app:layout_constraintTop_toBottomOf="@+id/textNamaDosen"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="299dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif"
            android:text="Bidang : "
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/profil_dosen"
            app:layout_constraintTop_toBottomOf="@+id/textNIK"
            app:layout_constraintVertical_bias="0.313" />

        <TextView
            android:id="@+id/textBidangDosen"
            android:layout_width="299dp"
            android:layout_height="25dp"
            android:fontFamily="sans-serif"
            android:text="Bussiness Intelegence"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/profil_dosen"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintVertical_bias="0.375" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

